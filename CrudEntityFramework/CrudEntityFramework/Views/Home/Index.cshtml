@model IEnumerable<CrudEntityFramework.Models.Usuario>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <h1 class="text-center">CRUD Usuarios</h1>
    <div class="col-12">
        <div class="float-right">
            <a asp-action="Create" asp-controller="Home" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo Usuario</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border">
                <div class="card-header">
                    <h3><strong>Lista de usuarios</strong></h3>

                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count() >0)
                    {
                        <table class="table table-bordered" id="tablaUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.Celular)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Nombre)</td>
                                    <td>@Html.DisplayFor(m => item.Telefono)</td>
                                    <td>@Html.DisplayFor(m => item.Celular)</td>
                                    <td>@Html.DisplayFor(m => item.Email)</td>
                                    <td>
                                        <a class="btn-primary" asp-action="Edit" asp-route="@item.Id">Editar</a>
                                        <a class="btn-info" asp-action="Details" asp-route="@item.Id">Detalles</a>
                                        <a class="btn-danger" asp-action="Delete" asp-route="@item.Id">Borrar</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    { 
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>

